<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <meta name="description" content="Fades n Braids Loyalty Program - Earn points with every visit and redeem exclusive rewards">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/fades-n-braids-logo.svg">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/components.css">
    <link rel="stylesheet" href="/css/mobile-navigation.css">
    <link rel="stylesheet" href="/css/animations.css">
    {{#if customer}}
        <link rel="stylesheet" href="/css/dashboard.css">
    {{/if}}
    {{#if business}}
        <link rel="stylesheet" href="/css/dashboard.css">
        <link rel="stylesheet" href="/css/business.css">
        <link rel="stylesheet" href="/css/business-dashboard.css">
        <link rel="stylesheet" href="/css/checkin-codes.css">
    {{/if}}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    {{!-- Icons --}}
    <script src="https://kit.fontawesome.com/d857a2c174.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="navbar-brand">
                <a href="/" class="brand-link">
                    <img src="/images/fades-n-braids-logo.svg" alt="Fades n Braids" class="brand-logo">
                    <span class="brand-text">Fades n Braids</span>
                </a>
            </div>

            <!-- Mobile Menu Toggle -->
            <button class="navbar-toggle" id="navbar-toggle" aria-label="Toggle navigation">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>

            <div class="navbar-menu" id="navbar-menu">
                {{#if customer}}
                    <!-- Customer Navigation -->
                    <div class="navbar-user customer-nav">
                        <div class="user-info">
                            <span class="user-greeting">
                                <i class="fas fa-user-circle"></i>
                                <span class="greeting-text">Hi, {{customer.firstName}}!</span>
                            </span>
                            <div class="user-points">
                                <i class="fas fa-coins"></i>
                                <span class="points-value">{{formatPoints (safeValue customer.availablePoints 0)}}</span>
                                <span class="points-label">pts</span>
                            </div>
                        </div>
                        <div class="nav-actions">
                            <a href="/customer/dashboard" class="nav-btn btn-outline" title="Dashboard">
                                <i class="fas fa-tachometer-alt"></i>
                                <span class="btn-text">Dashboard</span>
                            </a>
                            <form action="/api/customers/logout" method="POST" class="logout-form" onsubmit="return handleLogoutFallback(this, '/customer/login')">
                                <button type="submit" class="nav-btn btn-ghost" title="Logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span class="btn-text">Logout</span>
                                </button>
                            </form>
                        </div>
                    </div>
                {{else if business}}
                    <!-- Business Navigation -->
                    <div class="navbar-user business-nav">
                        <div class="user-info">
                            <span class="user-greeting">
                                <i class="fas fa-building"></i>
                                <span class="greeting-text">{{business.businessName}}</span>
                            </span>
                        </div>
                        <div class="nav-actions">
                            <a href="/business/dashboard" class="nav-btn btn-outline" title="Dashboard">
                                <i class="fas fa-chart-pie"></i>
                                <span class="btn-text">Dashboard</span>
                            </a>
                            <a href="/business/checkin-codes" class="nav-btn btn-secondary" title="Display Codes">
                                <i class="fas fa-qrcode"></i>
                                <span class="btn-text">Codes</span>
                            </a>
                            <form action="/api/business/logout" method="POST" class="logout-form" onsubmit="return handleLogoutFallback(this, '/business/login')">
                                <button type="submit" class="nav-btn btn-ghost" title="Logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span class="btn-text">Logout</span>
                                </button>
                            </form>
                        </div>
                    </div>
                {{else}}
                    <!-- Public Navigation -->
                    <div class="navbar-auth">
                        <a href="/customer/login" class="nav-btn btn-ghost" title="Login">
                            <i class="fas fa-sign-in-alt"></i>
                            <span class="btn-text">Login</span>
                        </a>
                        <a href="/customer/register" class="nav-btn btn-primary" title="Join Program">
                            <i class="fas fa-user-plus"></i>
                            <span class="btn-text">Join Program</span>
                        </a>
                    </div>
                {{/if}}
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        {{{body}}}
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <img src="/images/fades-n-braids-logo.svg" alt="Fades n Braids" class="footer-logo">
                    <p class="footer-description">
                        Your premier destination for fades and braids. Join our loyalty program and earn rewards with every visit!
                    </p>
                </div>

                <div class="footer-links">
                    <div class="footer-section">
                        <h4>Quick Links</h4>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="/customer/register">Join Program</a></li>
                            <li><a href="/customer/login">Customer Login</a></li>
                        </ul>
                    </div>

                    <div class="footer-section">
                        <h4>Contact</h4>
                        <ul>
                            <li>Phone: (555) 123-4567</li>
                            <li>Email: info@fadesbraids.com</li>
                            <li>Address: 123 Style St, City, ST 12345</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 Fades n Braids. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- JavaScript Modules -->
    <!-- Core utilities and helpers -->
    <script src="/clientSideJs/utils.js"></script>
    <script src="/clientSideJs/notifications.js"></script>
    <script src="/clientSideJs/animations.js"></script>
    <script src="/clientSideJs/auth.js"></script>

    <!-- Feature-specific modules -->
    {{#if customer}}
    <script src="/clientSideJs/dashboard.js"></script>
    <script src="/clientSideJs/rewards.js"></script>
    {{/if}}

    {{#if business}}
    <script src="/clientSideJs/business-dashboard.js"></script>
    <script src="/clientSideJs/business-modals.js"></script>
    <script src="/clientSideJs/business-handlers.js"></script>
    {{/if}}

    <!-- Main coordinator (must be last) -->
    <script src="/clientSideJs/main.js"></script>

    <script>
        // Fallback logout handler for when auth.js isn't loaded
        function handleLogoutFallback(form, redirectUrl) {
            // If the main auth handler exists, let it handle the logout
            if (typeof handleLogoutForms === 'function') {
                return false; // Let the main handler take over
            }

            // Fallback implementation
            const button = form.querySelector('button[type="submit"]');
            if (button) {
                button.disabled = true;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> <span class="btn-text">Logging out...</span>';
            }

            fetch(form.action, {
                method: 'POST',
                credentials: 'include'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (typeof showNotification === 'function') {
                        showNotification('Logged out successfully', 'success');
                    }
                    setTimeout(() => {
                        window.location.href = data.redirectUrl || redirectUrl;
                    }, 1000);
                } else {
                    if (typeof showNotification === 'function') {
                        showNotification('Logout failed', 'error');
                    }
                    if (button) {
                        button.disabled = false;
                        button.innerHTML = '<i class="fas fa-sign-out-alt"></i> <span class="btn-text">Logout</span>';
                    }
                }
            })
            .catch(error => {
                console.error('Logout error:', error);
                if (typeof showNotification === 'function') {
                    showNotification('Network error during logout', 'error');
                }
                // Redirect anyway after error
                setTimeout(() => {
                    window.location.href = redirectUrl;
                }, 2000);
            });

            return false; // Prevent default form submission
        }
    </script>
</body>
</html>
