    function sortTopCustomers(metric) {
        if (!window.topCustomersData) {
            loadTopCustomers();
            return;
        }

        const customers = [...window.topCustomersData];

        customers.sort((a, b) => {
            switch(metric) {
                case 'visits':
                    return (b.totalVisits || 0) - (a.totalVisits || 0);
                case 'points':
                    return (b.totalPoints || 0) - (a.totalPoints || 0);
                case 'spending':
                    return (b.totalSpending || 0) - (a.totalSpending || 0);
                default:
                    return (b.totalVisits || 0) - (a.totalVisits || 0);
            }
        });

        displayTopCustomers(customers);
    }

    function formatDate(dateString) {
        if (!dateString) return 'Unknown';
        const date = new Date(dateString);
        return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
    }
