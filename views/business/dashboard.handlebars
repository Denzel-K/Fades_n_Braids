<script>
    // Initialize business dashboard when page loads
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof initializeBusinessDashboard === 'function') {
            initializeBusinessDashboard();
        }

        // Initialize tab functionality
        initializeBusinessTabs();

        // Show overview tab by default
        showDashboardTab('overview');
    });

    // Business tab functionality with Tailwind classes
    function initializeBusinessTabs() {
        const tabButtons = document.querySelectorAll('.dashboard-tabs .tab-btn');
        tabButtons.forEach(button => {
            button.addEventListener('click', function() {
                const onclickAttr = this.getAttribute('onclick');
                let tabName = '';

                if (onclickAttr) {
                    const match = onclickAttr.match(/showDashboardTab\('([^']+)'\)/);
                    if (match) {
                        tabName = match[1];
                    }
                }

                if (!tabName && this.id) {
                    tabName = this.id.replace('-tab', '');
                }

                if (tabName) {
                    showDashboardTab(tabName);
                }
            });
        });
    }

    function showDashboardTab(tabName) {
        console.log('Switching to business tab:', tabName);

        // Remove active class from all tabs and buttons
        document.querySelectorAll('.tab-content').forEach(tab => {
            tab.classList.add('hidden');
            tab.classList.remove('block');
        });
        document.querySelectorAll('.dashboard-tabs .tab-btn').forEach(btn => {
            btn.classList.remove('active', 'bg-white', 'text-primary', 'shadow-sm');
            btn.classList.add('text-gray-600', 'hover:text-gray-900');
        });

        // Add active class to selected tab and button
        const activeTab = document.getElementById(`${tabName}-content`);
        const activeButton = document.getElementById(`${tabName}-tab`);

        if (activeTab) {
            activeTab.classList.remove('hidden');
            activeTab.classList.add('block');
            console.log('Activated tab content:', `${tabName}-content`);
        } else {
            console.warn('Tab content not found:', `${tabName}-content`);
        }

        if (activeButton) {
            activeButton.classList.add('active', 'bg-white', 'text-primary', 'shadow-sm');
            activeButton.classList.remove('text-gray-600', 'hover:text-gray-900');
            console.log('Activated tab button:', `${tabName}-tab`);
        } else {
            console.warn('Tab button not found:', `${tabName}-tab`);
        }

        // Load content based on tab
        if (tabName === 'overview') {
            if (typeof loadDashboardStats === 'function') {
                loadDashboardStats();
            }
            if (typeof loadCheckInCodes === 'function') {
                loadCheckInCodes();
            }
        } else if (tabName === 'customers') {
            if (typeof loadCustomersData === 'function') {
                loadCustomersData();
            }
        } else if (tabName === 'rewards') {
            if (typeof loadRewardsData === 'function') {
                loadRewardsData();
            }
            // Initialize rewards sub-tabs
            initializeRewardsSubTabs();
        } else if (tabName === 'analytics') {
            if (typeof loadDashboardStats === 'function') {
                loadDashboardStats();
            }
            if (typeof loadAnalyticsData === 'function') {
                loadAnalyticsData();
            }
        }
    }

    // Initialize rewards sub-tabs
    function initializeRewardsSubTabs() {
        const rewardsTabButtons = document.querySelectorAll('.rewards-tab-btn');
        rewardsTabButtons.forEach(button => {
            button.addEventListener('click', function() {
                const tabName = this.getAttribute('data-tab');
                showRewardsSubTab(tabName);
            });
        });

        // Show available rewards by default
        showRewardsSubTab('available-rewards');
    }

    function showRewardsSubTab(tabName) {
        console.log('Switching to rewards sub-tab:', tabName);

        // Remove active class from all sub-tab buttons
        document.querySelectorAll('.rewards-tab-btn').forEach(btn => {
            btn.classList.remove('bg-white', 'text-primary', 'shadow-sm');
            btn.classList.add('text-gray-600', 'hover:text-gray-900');
        });

        // Hide all sub-tab content
        document.querySelectorAll('.rewards-tab-content').forEach(content => {
            content.classList.add('hidden');
        });

        // Show selected sub-tab content
        const activeContent = document.getElementById(tabName);
        const activeButton = document.querySelector(`[data-tab="${tabName}"]`);

        if (activeContent) {
            activeContent.classList.remove('hidden');
        }

        if (activeButton) {
            activeButton.classList.add('bg-white', 'text-primary', 'shadow-sm');
            activeButton.classList.remove('text-gray-600', 'hover:text-gray-900');
        }

