<!-- Hero Section -->
<section class="bg-gradient-to-br from-primary-orange/10 via-primary-pink/10 to-primary-purple/10 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class="order-2 lg:order-1">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
                    Welcome to <span class="text-gradient">Fades n Braids</span> Loyalty Program
                </h1>
                <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                    Earn points with every visit and unlock exclusive rewards! Join our community of style enthusiasts and get rewarded for your loyalty.
                </p>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-12 h-12 bg-primary-orange/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-bullseye text-primary-orange text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Earn Points</h3>
                            <p class="text-gray-600 text-sm">Get 10 points for every visit</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-12 h-12 bg-primary-pink/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-gift text-primary-pink text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Exclusive Rewards</h3>
                            <p class="text-gray-600 text-sm">Redeem points for discounts and free services</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div class="flex-shrink-0 w-12 h-12 bg-primary-purple/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-mobile-alt text-primary-purple text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900 mb-1">Easy Check-in</h3>
                            <p class="text-gray-600 text-sm">Quick QR code or digit code check-in</p>
                        </div>
                    </div>
                </div>

                <div class="flex flex-col sm:flex-row gap-4">
                    {{#if customer}}
                        <a href="/customer/dashboard" class="btn btn-primary btn-lg">
                            Go to Dashboard
                        </a>
                        <div class="flex items-center justify-center sm:justify-start bg-white rounded-lg px-6 py-3 shadow-sm border border-gray-200">
                            <span class="text-gray-700">You have <strong class="text-primary-orange">{{formatPoints (safeValue customer.availablePoints 0)}} points</strong> available!</span>
                        </div>
                    {{else}}
                        <a href="/customer/register" class="btn btn-primary btn-lg">
                            Join Now - Get 50 Welcome Points!
                        </a>
                        <a href="/customer/login" class="btn btn-outline btn-lg">
                            Already a Member? Login
                        </a>
                    {{/if}}
                </div>
            </div>

            <div class="order-1 lg:order-2 flex justify-center">
                <img src="/images/fades-n-braids-illustration.png" alt="Fades n Braids Salon" class="w-full max-w-md lg:max-w-lg xl:max-w-xl h-auto">
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-16">How It Works</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="text-center">
                <div class="w-16 h-16 bg-gradient-to-br from-primary-orange to-primary-pink rounded-full flex items-center justify-center text-white text-2xl font-bold mx-auto mb-6">1</div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Join the Program</h3>
                    <p class="text-gray-600">Sign up with your phone number and get 50 welcome points instantly!</p>
                </div>
            </div>
            <div class="text-center">
                <div class="w-16 h-16 bg-gradient-to-br from-primary-pink to-primary-purple rounded-full flex items-center justify-center text-white text-2xl font-bold mx-auto mb-6">2</div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Visit & Check-in</h3>
                    <p class="text-gray-600">Scan the QR code or enter the digit code displayed in our salon during your visit.</p>
                </div>
            </div>
            <div class="text-center">
                <div class="w-16 h-16 bg-gradient-to-br from-primary-purple to-primary-violet rounded-full flex items-center justify-center text-white text-2xl font-bold mx-auto mb-6">3</div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Earn Points</h3>
                    <p class="text-gray-600">Automatically earn 10 points for every visit. Watch your points grow!</p>
                </div>
            </div>
            <div class="text-center">
                <div class="w-16 h-16 bg-gradient-to-br from-primary-violet to-primary-blue rounded-full flex items-center justify-center text-white text-2xl font-bold mx-auto mb-6">4</div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">Redeem Rewards</h3>
                    <p class="text-gray-600">Use your points for discounts, free services, and exclusive offers.</p>
                </div>
            </div>
        </div>
    </div>
</section>

