<!-- CTA Section -->
<section class="py-20 bg-gradient-primary">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Start Earning Rewards?</h2>
        <p class="text-xl text-white/90 mb-8">Join thousands of satisfied customers who are already earning points and saving money!</p>
        {{#unless customer}}
            <a href="/customer/register" class="btn bg-white text-primary-orange hover:bg-gray-100 btn-lg shadow-lg">
                Join the Program Today
            </a>
        {{/unless}}
    </div>
</section>
