<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-logo">
                <img src="/images/fades-n-braids-logo.svg" alt="Fades n Braids">
            </div>
            
            <div class="auth-header">
                <h1 class="auth-title">Join Our Loyalty Program</h1>
                <p class="auth-subtitle">Get 50 welcome points when you sign up!</p>
            </div>

            <form class="auth-form" action="/api/customers/register" method="POST" data-validate>
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" id="firstName" name="firstName" class="form-input" placeholder="John" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" id="lastName" name="lastName" class="form-input" placeholder="Doe" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" id="phone" name="phone" class="form-input" placeholder="(555) 123-4567" required>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Email (Optional)</label>
                    <input type="email" id="email" name="email" class="form-input" placeholder="john@example.com">
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-input" placeholder="Create a password" required minlength="6">
                </div>

                <div class="welcome-message">
                    <p>ðŸŽ‰ Welcome Bonus: Get 50 points just for joining!</p>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-full">Join Program</button>
                </div>
            </form>

            <div class="auth-footer">
                <p>Already have an account? <a href="/customer/login">Sign in</a></p>
            </div>
        </div>
    </div>
</div>
