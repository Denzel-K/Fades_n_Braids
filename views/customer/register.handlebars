<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="bg-white rounded-xl shadow-lg p-8">
            <div class="text-center mb-8">
                <img src="/images/fades-n-braids-logo.svg" alt="Fades n Braids" class="h-12 w-12 mx-auto mb-4">
                <h1 class="text-3xl font-bold text-gray-900">Join Our Loyalty Program</h1>
                <p class="text-gray-600 mt-2">Get 50 welcome points when you sign up!</p>
            </div>

            <form action="/api/customers/register" method="POST" data-validate class="space-y-6">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" id="firstName" name="firstName" class="form-input" placeholder="John" required>
                    </div>
                    <div>
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" id="lastName" name="lastName" class="form-input" placeholder="Doe" required>
                    </div>
                </div>

                <div>
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" id="phone" name="phone" class="form-input" placeholder="(555) 123-4567" required>
                </div>

                <div>
                    <label for="email" class="form-label">Email (Optional)</label>
                    <input type="email" id="email" name="email" class="form-input" placeholder="john@example.com">
                </div>

                <div>
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-input" placeholder="Create a password" required minlength="6">
                </div>

                <div class="bg-gradient-to-r from-primary-orange/10 to-primary-pink/10 border border-primary-orange/20 rounded-lg p-4">
                    <p class="text-primary-orange font-medium text-center">ðŸŽ‰ Welcome Bonus: Get 50 points just for joining!</p>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary btn-full">Join Program</button>
                </div>
            </form>

            <div class="text-center mt-6">
                <p class="text-gray-600">Already have an account? <a href="/customer/login" class="text-primary hover:text-primary-orange font-medium">Sign in</a></p>
            </div>
        </div>
    </div>
</div>
